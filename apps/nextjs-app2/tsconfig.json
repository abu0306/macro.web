{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "plugins": [
            {
                "name": "next"
            }
        ],
        "allowJs": true,
        "noEmit": true,
        "incremental": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@wisland/ui": [
                "../../packages/ui/src"
            ],
            "@wisland/utils": [
                "../../packages/utils/src"
            ]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}